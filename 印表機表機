<script>
  let utterance;

  function speak() {
    const text = document.getElementById("text").innerText;
    utterance = new SpeechSynthesisUtterance(text);
    utterance.lang = "zh-TW";
    speechSynthesis.speak(utterance);
  }

  function stopSpeak() {
    speechSynthesis.cancel();
  }
</script>

